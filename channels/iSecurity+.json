{
    "actions": {
        "Aim your camera": [
            {
                "value": "*",
                "variable": "camera_pan"
            },
            {
                "value": "*",
                "variable": "camera_tilt"
            }
        ],
        "Disable camera motion detection": [
            {
                "value": "OFF",
                "variable": "camera_motion_detection"
            }
        ],
        "Enable camera motion detection": [
            {
                "value": "ON",
                "variable": "camera_motion_detection"
            }
        ]
    },
    "triggers": {
        "Motion detected by camera": {
            "logicalOperator": "&",
            "operand": [
                {
                    "relationalOperator": "=",
                    "value": "ON",
                    "variable": "camera_motion_detection"
                },
                {
                    "relationalOperator": "=",
                    "value": "TRUE",
                    "variable": "motion_detected"
                }
            ]
        },
        "Person seen by camera": {
            "relationalOperator": "=",
            "value": "TRUE",
            "variable": "person_seen"
        }
    },
    "variables": {
        "camera_pan": {
            "maxValue": 359,
            "minValue": 0,
            "type": "range"
        },
        "camera_tilt": {
            "maxValue": 359,
            "minValue": 0,
            "type": "range"
        },
        "camera_motion_detection": {
            "type": "set",
            "valueSet": [
                "ON",
                "OFF"
            ]
        },
        "motion_detected": {
            "type": "boolean"
        },
        "person_seen": {
            "type": "boolean"
        }
    }
}
