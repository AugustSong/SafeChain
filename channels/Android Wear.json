{
  "actions": {
    "Send a notification": {
      "input": [
        {
          "type": "channel",
          "channel": ["Android Wear"]
        },
        {
          "type": "value",
          "channel": "{0}",
          "variable": "notification_text"
        }
      ],
      "definition": [
        {
          "assignment": "{0}.notification ← ON,{0}.notification_text ← {1}"
        }
      ]
    }
  },
  "triggers": {
    "Tap button": {
      "input": [
        {
          "type": "channel",
          "channel": ["Android Wear"]
        }
      ],
      "definition": {
        "boolean": "{0}.button = TAPPED"
      }
    }
  },
  "variables": {
    "button": {
      "type": "set",
      "setValue": ["TAPPED", "NONE"]
    },
    "notification": {
      "type": "set",
      "setValue": ["ON", "OFF"],
      "resetValue": "OFF"
    },
    "notification_text": {
      "type": "range",
      "minValue": 0,
      "maxValue": 1023
    }
  }
}
